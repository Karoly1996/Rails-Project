<h1>Edit Password</h1>

<%= form_with model: Current.user, url: password_path, data: { turbo: false } do |form| %>

  <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Edit Password", class: "btn btn-primary" %>
  </div>
<% end %>
